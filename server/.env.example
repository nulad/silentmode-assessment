# Server Configuration
# Port for the REST API server
PORT=3000

# Port for the WebSocket server
WS_PORT=8080

# Directory where downloaded files will be stored
DOWNLOAD_DIR=./downloads

# Size of each file chunk in bytes (default: 1MB)
CHUNK_SIZE=1048576

# Maximum number of retry attempts for failed chunk transfers
MAX_CHUNK_RETRY_ATTEMPTS=3

# Delay between chunk retry attempts in milliseconds
CHUNK_RETRY_DELAY=1000

# WebSocket heartbeat interval in milliseconds
HEARTBEAT_INTERVAL=30000

# Download timeout in milliseconds (5 minutes)
DOWNLOAD_TIMEOUT=300000

# Logging level (error, warn, info, debug)
LOG_LEVEL=info
